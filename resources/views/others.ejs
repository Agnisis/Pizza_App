<!-- menu section -->

<section class="menu container mx-auto p-8">
  <h1 class="text-3xl font-bold mb-8 text-red-700 italic">Our Other Fantastic Menus</h1>

  <div class="grid grid-cols-5 col-gap-14 row-gap-16">
    <% others.forEach(function(other){ %>

    <div class="w-72 my-3 rounded-sm bg-green-100 gap-x-2">
      <img
        src="/images/others/<%= other.image%>"
        alt=""
        class="h-40 mb-4 mx-auto my-3 rounded-full"
      />
      <div class="text-center">
        <h2 class="mb-4 text-lg"><%= other.name%></h2>
        <span class="size text-xs py-1 px-4 rounded-full uppercase"
          ><%= other.size%></span
        >
        <div class="flex items-center justify-around my-6">
          <span class="text-lg font-bold">â‚¹ <%= other.price%>/-</span>
          <button
            data-pizza="<%= JSON.stringify(other)%>"
            class="add-to-cart px-6 py-1 flex items-center font-bold"
          >
            <span>+</span>
            <span class="mx-4">Add</span>
          </button>
        </div>
      </div>
    </div>

    <% }) %>
  </div>
</section>

