

<section class="login flex justify-center pt-24">

<div class="w-full max-w-md text-xl">
    <form action="/login" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4  border-2 border-cyan-200">
      <%if(messages.error)    {%>
        <span class="text-red-500 text-sm"><%=messages.error %></span>

        <%}%>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
          Email
        </label>
        <input name="email"class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Enter your Email">
      </div>
      <div class="mb-6">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
          Password
        </label>
        <input name="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="******************">
        
      </div>
      <div class="flex items-center justify-between">
        <button class="bg-green-500 rounded-full hover:bg-green-400 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
          Log In
        </button>
        <a class="inline-block align-baseline font-bold text-sm text-green-500 hover:text-green-300" href="/register">
          Don't have account ?
        </a>
      </div>
    </form>
    <p class="text-center text-gray-500 text-xs">
      &copy;2023 PizzaaRio. All rights reserved.
    </p>
  </div>

</section>