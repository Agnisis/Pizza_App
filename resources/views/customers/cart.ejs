<section class="cart">




    <% if(session.cart){%>
        <div class="order container mx-auto w-1/2 pt-10">
            <div class="flex items-center border-b border-gray-300 pb-3">
                <img src="/images/cart-black.png" alt="">
                <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
            </div>
            <div>


                <% for(let pizza of Object.values(session.cart.items)){ %>


                    <div class="pizza-list ">
                        <div class="flex items-center my-3">
                            <img src="/images/<%=pizza.item.image%>" alt="" class="w-24">
                            <div class="ml-4 flex-1">
                                <h1>
                                    <%=pizza.item.name%>
                                </h1>
                                <span>
                                    <%=pizza.item.size%>
                                </span>
                            </div>

                            <span class="flex-1">
                                <%=pizza.qty%>
                            </span>
                            <span class="font-bold text-lg">
                                <%=pizza.item.price*pizza.qty%>
                            </span>
                        </div>
                        <% } %>






                            <hr>

                            <div class="text-right py-4">
                                <div class="po">
                                    <span class="text-lg font-bold">Total Amount :</span>
                                    <span class="amount font-bold text-lg ">â‚¹ <%=session.cart.totalPrice%></span>
                                </div>

                                <%if(user){%>
                                    <div>
                                        <form action="/orders" method="post" class="mt-12">
                                            <input type="text" class="border border-gray-400 p-2 w-1/2 mb-5 
                    " placeholder="Phone Number" name="phone">
                                            <input type="text" name ="address"class="border border-gray-400 p-2 w-1/2 mt-4 
                    " placeholder="Address">
                                            <div>
                                                <button type="Submit"
                                                    class="bg-green-500 hover:bg-orange-700 text-white font-bold py-2 px-4  my-5 rounded-full ">Order
                                                    Now</button>
                                            </div>
                                        </form>
                                    </div>
                                    <%}else{%>

                                        <a href="/"
                                            class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4  my-5 rounded-full">Login
                                            to continue</a>
                                        <%}%>

                            </div>




                            </h1>




                    </div>
            </div>

        </div>
        <%} else{%>


            <div class="empty-cart py-16">

                <div class="container mx-auto text-center">

                    <h1 class="text-3xl font-bold mb-2">Cart empty </h1>

                    <p class="text-gray-500 text-lg mb-12">
                        Ohoo No pizza yet !!!<br>
                        Go to main page and Order Quickly.
                    </p>

                    <img src="/images/empty-cart.png" class="w-2/5 mx-auto " alt="">

                    <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go
                        back</a>

                </div>
            </div>

            <%}%>
</section>