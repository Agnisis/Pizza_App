<!-- menu section -->

<section class="menu container mx-auto p-8">
  <h1 class="text-3xl font-bold mb-8 text-red-700 italic">Our Delicious Pizzas</h1>

  <div class="grid grid-cols-5 col-gap-14 row-gap-16">
    <% pizzas.forEach(function(pizza){ %>

    <div class="w-72 my-3 rounded-lg bg-yellow-100">
      <img
        src="/images/pizza/<%= pizza.image%>"
        alt=""
        class="h-40 mb-4 mx-auto my-3 rounded-2xl"
      />
      <div class="text-center">
        <h2 class="mb-4 text-lg"><%= pizza.name%></h2>
        <span class="size text-xs py-1 px-4 rounded-full uppercase"
          ><%= pizza.size%></span
        >
        <div class="flex items-center justify-around my-6">
          <span class="text-lg font-bold">â‚¹ <%= pizza.price%>/-</span>
          <button
            data-pizza="<%= JSON.stringify(pizza)%>"
            class="add-to-cart px-6 py-1 flex items-center font-bold"
          >
            <span>+</span>
            <span class="mx-4">Add</span>
          </button>
        </div>
      </div>
    </div>

    <% }) %>
  </div>
</section>




